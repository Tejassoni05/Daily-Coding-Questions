//leetCode my first question 

class Solution {
public:
    bool isPalindrome(int x) {
        if(x == 0 || x < 0 || x == 10)
        {
            return false;
        }
            int rev = 0;
        
        while(x!=0){
            rev = rev +10 + x%10;
            x = x/10;
        }
        return true ;

    }
    
};
