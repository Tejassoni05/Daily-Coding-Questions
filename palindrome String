// check its a palendrom String or not 
class Main {
    public static void main(String[] args) {
        String str = "rar"; 
        String revStr = "";
        int strLegth= str.length();
        
        for(int i = (strLegth-1); i >= 0; i--){
            revStr = revStr + str.charAt(i);
        }
        
        if (str.toLowerCase().equals(revStr.toLowerCase())){
        System.out.println(" is plendrom string ");
        }
        
        else {
            System.out.println(" not a  plendrom string ");
        }
    }
}
